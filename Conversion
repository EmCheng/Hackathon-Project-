import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Arrays;

public class Conversion {

	public static void main(String[] args) throws IOException {
		BufferedReader in = new BufferedReader(new FileReader("C:/Users/marga/Documents/Code Day Project/Coordinates 2.csv"));
		ArrayList<Coordinate> coords = new ArrayList<Coordinate>();
		String line;
		in.readLine();
		while((line = in.readLine()) != null){
			String[] parts = line.split(",");
			System.out.println(Arrays.toString(parts));
			String name = parts[0];
			double percent = Double.parseDouble(parts[1].substring(0, parts[1].length()-1))/100.0;
			double  lat = Double.parseDouble(parts[2].substring(2)); 
			double lon = Double.parseDouble(parts[3].substring(1, parts[3].length()-2)); //1
			coords.add(new Coordinate(name, percent, lat, lon));
		}
		Coordinate [] data = new Coordinate[coords.size()]; 
	
		coords.toArray(data);
	}
	

}
